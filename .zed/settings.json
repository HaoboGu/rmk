                    "noDefaultFeatures": true
                },
                "cargo": {
                    "noDefaultFeatures": true
                    // "target": "thumbv7em-none-eabihf"
                },
                "showUnlinkedFileNotification": false,
                "linkedProjects": [
                    "rmk-types/Cargo.toml",
                    "rmk/Cargo.toml",
                    "rmk-macro/Cargo.toml",
                    "examples/use_rust/nrf52840_ble_split/Cargo.toml"
                ]
            }
        }
    }
}
